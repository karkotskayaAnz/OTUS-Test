    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run npm test for file",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm test -- ${fileBasename}"
        },
        {
            "name": "Run npm test 2",
            "request": "launch",
            "type": "node",
            "args": ["--experimental-json-modules", "${workspaceFolder}/nodeserver"],
            "env": {
               "MY_VAR": "abc"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\test\\api.spec.js"
        }
    ]
}